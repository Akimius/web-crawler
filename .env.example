# Database
DB_PATH=data/news.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/crawler.log

# Data Storage Configuration
# Options: "db" (SQLite only), "csv" (CSV only), "db,csv" (both)
# Each crawl run creates a new timestamped CSV file (e.g., articles_20241210_143025.csv)
DATA_STORAGE=db
CSV_DIR=data

# Crawler settings
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
REQUEST_DELAY=1
TIMEOUT=30
MAX_RETRIES=3
