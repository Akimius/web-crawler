# Database
DB_PATH=data/news.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/crawler.log

# Crawler settings
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_DELAY=1
TIMEOUT=30
MAX_RETRIES=3

# Date filtering (optional - leave empty to crawl all articles)
# Only crawl articles published within this date range
# Format: YYYY-MM-DD
CRAWL_FROM_DATE=
CRAWL_TO_DATE=

# Scheduling (cron format)
CRAWL_SCHEDULE=0 */6 * * *  # Every 6 hours

# News sources (comma-separated URLs)
NEWS_SOURCES=https://example.com,https://another-news.com
