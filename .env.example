# Database
DB_PATH=data/news.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/crawler.log

# Crawler settings
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_DELAY=1
TIMEOUT=30
MAX_RETRIES=3

# Date filtering (optional - can also be set via CLI --start and --end)
# Only crawl articles published within this date range
# Format: YYYY-MM-DD
# Note: CLI arguments override these values
CRAWL_FROM_DATE=
CRAWL_TO_DATE=
